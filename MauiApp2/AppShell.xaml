<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp2"
    Shell.FlyoutBehavior="Flyout"
    Title="">


   
    

    
    <ShellContent
    Title="Accueil"
    ContentTemplate="{DataTemplate local:HomePage}"
    Route="HomePage" />
    
    <ShellContent
    Title="Ajouter Etudiant"
    ContentTemplate="{DataTemplate local:AddStudentPage}"
    Route="AddStudentPage" />
    
    <ShellContent
    Title="Ajouter cours"
    ContentTemplate="{DataTemplate local:AddCoursePage}"
    Route="AddCoursePage" />
    
    <ShellContent
        Title="Recherche"
        ContentTemplate="{DataTemplate local:SearchPage}"
        Route="SearchPage" />
    
    <ShellContent
         Title="Absence"
        ContentTemplate="{DataTemplate local:AbsencePage}"
        Route="AbsencePage" />

</Shell>
